<ul>
  <% if ::Refinery::Sponsors::Admin::SponsorsController.searchable? %>
    <li>
      <%= render '/refinery/admin/search', :url => refinery.sponsors_admin_sponsors_path %>
    </li>
  <% end %>
  <li>
    <%= link_to t('.create_new'), refinery.new_sponsors_admin_sponsor_path,
                 :class => "add_icon" %>
  </li>
<% if !searching? && ::Refinery::Sponsors::Admin::SponsorsController.sortable? && ::Refinery::Sponsors::Sponsor.many? %>
  <li>
    <%= link_to t('.reorder', :what => "Sponsors"),
                 refinery.sponsors_admin_sponsors_path,
                 :id => "reorder_action",
                 :class => "reorder_icon" %>

    <%= link_to t('.reorder_done', :what => "Sponsors"),
                 refinery.sponsors_admin_sponsors_path,
                 :id => "reorder_action_done",
                 :style => "display: none;",
                 :class => "reorder_icon" %>
  </li>
<% end %>
</ul>
