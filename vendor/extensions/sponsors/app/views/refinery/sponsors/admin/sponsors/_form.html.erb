<%= form_for [refinery, :sponsors_admin, @sponsor] do |f| -%>
  <%= render '/refinery/admin/error_messages',
              :object => @sponsor,
              :include_object_name => true %>

  <div class='field'>
    <%= f.label :name -%>
    <%= f.text_field :name, :class => 'larger widest' -%>
  </div>

  <div class='field'>
    <%= f.label :sponsor_website -%>
    <%= f.text_field :sponsor_website -%>
  </div>

  <div class='field'>
    <%= f.label :sponsor_image -%>
    <%= render '/refinery/admin/image_picker',
               :f => f,
               :field => :sponsor_image_id,
               :image => @sponsor.sponsor_image,
               :toggle_image_display => false -%>
  </div>

  <%= render '/refinery/admin/form_actions', :f => f,
             :continue_editing => false,
             :delete_title => t('delete', :scope => 'refinery.sponsors.admin.sponsors.sponsor'),
             :delete_confirmation => t('message', :scope => 'refinery.admin.delete', :title => @sponsor.name) -%>
<% end -%>
